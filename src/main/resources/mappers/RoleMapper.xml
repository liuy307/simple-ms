<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd" >
<mapper namespace="com.liuyong.simplems.system.dao.RoleMapper" >
  <resultMap id="BaseResultMap" type="com.liuyong.simplems.system.ent.Role" >
    <result column="id" property="id" jdbcType="VARCHAR" />
    <result column="role_name" property="roleName" jdbcType="VARCHAR" />
    <result column="description" property="description" jdbcType="VARCHAR" />
  </resultMap>

<!--    baseMapper-->
    <select id="list" resultType="com.liuyong.simplems.system.ent.Role">
        select
        *
        from role
    </select>

    <select id="getById" resultType="com.liuyong.simplems.system.ent.Role">
        select
        *
        from role
        where id = #{id}
    </select>


    <insert id="save" parameterType="com.liuyong.simplems.system.ent.Role" >
        <selectKey resultType="java.lang.String" keyProperty="id" order="AFTER" >
            SELECT LAST_INSERT_ID()
        </selectKey>
        insert into role (role_name, description)
        values (#{roleName,jdbcType=VARCHAR}, #{description,jdbcType=VARCHAR})
    </insert>

    <update id="update" parameterType="com.liuyong.simplems.system.ent.Role">
    update role
    set id = #{id,jdbcType=VARCHAR},
      role_name = #{record.roleName,jdbcType=VARCHAR},
      description = #{record.description,jdbcType=VARCHAR}
    where id = #{id,jdbcType=VARCHAR}
  </update>

    <delete id="remove">
    delete
    from role
    where id = #{id,jdbcType=VARCHAR}
  </delete>

    <select id="getIdByNameBatch" resultType="java.lang.Integer">
        select
        id
        from role
        where role_name in
        <foreach collection="list" item="name" index="index" open="(" separator="," close=")">
         #{name}
        </foreach>
    </select>

  <select id="listRoles" resultType="com.liuyong.simplems.system.ent.Role">
        select
        *
        from role
    </select>

  <select id="getRoleById" resultType="com.liuyong.simplems.system.ent.Role">
        select
        *
        from role
        where id = #{id}
    </select>


  <insert id="saveRole" parameterType="com.liuyong.simplems.system.ent.Role" >
    <selectKey resultType="java.lang.String" keyProperty="id" order="AFTER" >
      SELECT LAST_INSERT_ID()
    </selectKey>
    insert into role (role_name, description)
    values (#{roleName,jdbcType=VARCHAR}, #{description,jdbcType=VARCHAR})
  </insert>

  <update id="updateRole" parameterType="com.liuyong.simplems.system.ent.Role">
    update role
    set id = #{id,jdbcType=VARCHAR},
      role_name = #{record.roleName,jdbcType=VARCHAR},
      description = #{record.description,jdbcType=VARCHAR}
    where id = #{id,jdbcType=VARCHAR}
  </update>

  <delete id="removeRole">
    delete
    from role
    where id = #{id,jdbcType=VARCHAR}
  </delete>
</mapper>