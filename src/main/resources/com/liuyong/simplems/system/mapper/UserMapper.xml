<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd" >
<mapper namespace="com.liuyong.simplems.system.dao.UserMapper">
    <select id="listAll" >
        select
        *
        from user
    </select>

    <select id="getById" >
        select
        *
        from user
        where id = #{id}
    </select>

    <insert id="createUser">
        insert into user(id, user_name, description, account_number, password)
        values (#{id}, #{userName}, #{description}, #{accountNumber}, #{password})
    </insert>
</mapper>